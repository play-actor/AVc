<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/colorItemText</item>
        <item name="itemIconTint">@color/colorItemText</item>
        <item name="itemTextColor">@color/colorItemText</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>