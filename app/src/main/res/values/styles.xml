<resources>

    <style name="NavigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="colorPrimary">@color/colorItemText</item>
        <item name="itemIconTint">@color/colorItemText</item>
        <item name="itemTextColor">@color/colorItemText</item>
        <item name="actionModeCloseButtonStyle">@color/black</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/error</item>
    </style>

    <style name="ActionButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/onSecondaryContainer</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>