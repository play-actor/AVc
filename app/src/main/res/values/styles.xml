<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="colorPrimary">@color/colorItemText</item>
        <item name="itemIconTint">@color/colorItemText</item>
        <item name="itemTextColor">@color/colorItemText</item>
        <item name="actionModeCloseButtonStyle">@color/black</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/onSecondaryContainer</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondaryContainer</item>
    </style>

    <style name="TextInputEditTextM3" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="colorPrimary">@color/onPrimaryContainer</item>

    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorItemBackground</item>
        <item name="boxStrokeColor">@color/onPrimaryContainer</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="endIconTint">@color/onBackground</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="TextInputEditTextOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/button_selector1</item>
        <item name="colorOutline">@color/onErrorContainer</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="endIconTint">@color/onBackground</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="TextInputEditTextExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/colorItemBackground</item>
        <item name="boxStrokeColor">@color/onPrimaryContainer</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="endIconTint">@color/onBackground</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="MaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:thumb">@drawable/mtrl_switch_thumb</item>
        <item name="track">@drawable/mtrl_switch_track</item>
        <item name="trackDecoration">@drawable/mtrl_switch_track_decoration</item>
        <item name="thumbTint">@color/primary</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="trackTint">@color/colorItemBackground</item>
        <item name="thumbIconTint">@color/mtrl_switch_thumb_icon_tint</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/button_outlined_selector</item>
    </style>

    <style name="ElevatedButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textColor">@color/button_selector</item>
        <item name="iconTint">@color/button_selector</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.TonalButton</item>
    </style>

    <style name="ThemeOverlay.Material3.Button.TonalButton">
        <item name="colorOnContainer">@color/onSecondaryContainer</item>
        <item name="colorContainer">@color/secondaryContainer</item>
    </style>
</resources>