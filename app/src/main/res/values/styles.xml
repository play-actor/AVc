<resources>

    <style name="NavigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="colorPrimary">@color/colorItemText</item>
        <item name="itemIconTint">@color/colorItemText</item>
        <item name="itemTextColor">@color/colorItemText</item>
        <item name="actionModeCloseButtonStyle">@color/black</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/onSecondaryContainer</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondaryContainer</item>
    </style>

    <style name="TextInputEditTextM3" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="colorPrimary">@color/onPrimaryContainer</item>

    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorItemBackground</item>
        <item name="boxStrokeColor">@color/onPrimaryContainer</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="endIconTint">@color/onBackground</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="MaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbIcon">@animator/default_switch_icon</item>
    </style>
</resources>